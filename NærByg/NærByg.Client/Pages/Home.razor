@page "/"
@rendermode InteractiveWebAssembly
@using NærByg.Client.Services
@using Shared.DTOs
@inject APIService APIService
@inject IJSRuntime JSRuntime

<PageTitle>Hjem</PageTitle>

<div class="container text-center">
    @if (RemoveAfterSearch)
    {
        <!-- fill for the website design -->
        <div class="row rowFills">
            <div class="col-6"></div>
            <div class="col-6"></div>
        </div>
    }
    <!-- Container with the input fields, button and range slider -->
    <div class="container">
        <div class="row">
            <div class="col-1 col-md-2 myBorder"></div>
            <div class="col-10 col-md-8 mt-5 myBorder">
                <div class="container">
                    <div class="container">
                        <div class="row">
                            <div class="col-3 col-md-3 myBorder"></div>
                            <div class="col-6 col-sm-6 myBorder">
                                <div class="search-box">
                                    <input type="text" class="input-search" @bind="SearchItemInput" @onkeydown="HandleKeyPress" placeholder="Søg efter et produkt..">
                                </div>
                            </div>
                            <div class="col-1 col-sm-1 myBorder">
                                <div class="search-box">
                                    <button @onclick="SearchItem" class="btn-search"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                            <div class="col-2 col-md-2 myBorder"></div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-3 col-md-3 myBorder"></div>
                        <div class="col-6 col-md-6 p-1 myBorder">
                            <div class="mt-3 myBorder">
                                <input class="input-search" type="text" id="adresseFormControlInput" @bind="AdresseInput" placeholder="Adresse">
                            </div>
                        </div>
                        <div class="col-3 col-md-3 myBorder"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 myBorder p-1">
                        <div class="d-flex justify-content-between align-items-center m-2">
                            <label for="kmRange" class="form-label mb-0">Kilometer radius</label>
                            <label class="form-label mb-0" @bind="kmRadiusValue">Valgt kilometer: <span id="kmValue">50</span> km</label>
                        </div>
                        <input type="range" class="form-range" min="0" max="100" step="1" id="kmRange" oninput="adjustSliderValue()">
                    </div>
                    @if (IsLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-1 col-md-2 myBorder"></div>
            </div>

            <!-- Loop through items -->
            @if (ProductListTrue)
            {
                <div class="container">
                    <div class="row">
                        <div class="col-1 col-md-2 myBorder"></div>
                        <div class="col-10 col-md-8 myBorder">
                            @foreach (var product in ProductListItems)
                            {
                                <a>
                                    <div class="cardProductList">
                                        <div class="row g-0">
                                            <div class="col-md-4">
                                                <img src="@product.PictureURL" width="150" height="150" class="img-fluid rounded-start" alt="...">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="row">
                                                    <div class="col-md-12 cardTitle">
                                                        <h6>@product.Brand @product.ProductName</h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12 cardBody">
                                                        <div class="row">
                                                            <div class="col-md-1"></div>
                                                            <div class="col-md-5">
                                                                <ul>
                                                                    <li>@product.Price</li>
                                                                    <li>@product.ShopName</li>
                                                                    <li>@product.Stock</li>
                                                                </ul>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <ul>
                                                                    <li>@product.ProductSku</li>
                                                                    <li>@product.ShopAddress</li>
                                                                    <li>@product.ShopOpeningHours</li>
                                                                </ul>
                                                                <div class="col-md-1"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                        <div class="col-1 col-md-2 myBorder"></div>
                    </div>
                </div>
            }
            <!-- Loop through items end -->

            <!-- fill for the website design -->
            <div class="row rowFills">
                <div class="col-6 myBorder"></div>
                <div class="col-6 myBorder"></div>
            </div>
        </div>
    </div>
</div>
<script>
    function adjustSliderValue() {
        const slider = document.getElementById('kmRange');
        const valueDisplay = document.getElementById('kmValue');
        let value = parseInt(slider.value);

        if (value <= 20) {
            value = Math.round(value / 2) * 2;
        } else if (value <= 50) {
            value = Math.round(value / 5) * 5;
        } else {
            value = Math.round(value / 10) * 10;
        }
        valueDisplay.innerText = value;
        slider.value = value;
    }
</script>

